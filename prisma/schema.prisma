generator client {
  provider = "prisma-client"
  output   = "../src/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String    @id @default(uuid())
  username String    @unique
  password String
  employee Employee? @relation("UserEmployee")
}

model Employee {
  id          String   @id @default(uuid())
  user        User?    @relation("UserEmployee", fields: [userId], references: [id])
  userId      String?  @unique
  fullname    String
  contactInfo String?
  unitId      String
  unit        Unit     @relation(fields: [unitId], references: [id])
  device      Device[]
}

model Unit {
  id       String     @id @default(uuid())
  title    String     @unique
  location String?
  employee Employee[]
}

model VpnProfileType {
  id          String       @id @default(uuid())
  name        String       @unique
  description String?
  profiles    VpnProfile[]
}

model VpnProfile {
  id            String         @id @default(uuid())
  profileCode   String         @unique
  ipAddress     String
  profileTypeId String
  profileType   VpnProfileType @relation(fields: [profileTypeId], references: [id])
  device        Device?
}

model Device {
  id           String      @id @default(uuid())
  manufacturer String
  model        String
  os           String
  serialNumber String      @unique
  employeeId   String
  employee     Employee    @relation(fields: [employeeId], references: [id])
  vpnProfileId String?     @unique
  vpnProfile   VpnProfile? @relation(fields: [vpnProfileId], references: [id])
}
